<%- include ('../partials/header.ejs') %>
<%- include ('../partials/navbar.ejs' ) %>

<div class="container mt-4">
    <hr>
    <% if (locals.success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>
    <% if (locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <div class="card">
        <div class="card-header">
            <h2>Atribuir Denúncias a Fiscais</h2>
        </div>
        <div class="card-body">
            <% if (denuncias.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nº</th>
                                <th>Título</th>
                                <th>Endereço</th>
                                <th>Data</th>
                                <th>Fiscal</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% denuncias.forEach(denuncia => { %>
                                <tr>
                                    <td><%= denuncia.year %>/<%= denuncia.number %></td>
                                    <td><%= denuncia.title %></td>
                                    <td>
                                        <%= denuncia.endereco %>, <%= denuncia.numero %><br>
                                        <%= denuncia.bairro %>
                                    </td>
                                    <td><%= new Date(denuncia.created_at).toLocaleDateString() %></td>
                                    <td>
                                        <% if (denuncia.userId) { %>
                                            <%= denuncia.user.nome %>
                                        <% } else { %>
                                            <span class="badge bg-warning">Não atribuída</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (!denuncia.userId) { %>
                                            <a href="/atribuir/<%= denuncia.id %>" class="btn btn-sm btn-primary">
                                                Atribuir Fiscal
                                            </a>
                                        <% } else { %>
                                            <span class="badge bg-success">Atribuída</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-info">
                    Nenhuma denúncia pendente de atribuição.
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include ('../partials/footer.ejs') %>
