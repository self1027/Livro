<script>
  // Polyfill global para auto-grow em <textarea>
  (() => {
    const selector = 'textarea:not([data-no-autogrow])';
  
    const autoGrow = (ta) => {
      if (!ta || ta.nodeType !== 1) return;
      // Evita pulo visual e barra
      ta.style.overflowY = 'hidden';
      // Reseta e mede de novo
      ta.style.height = 'auto';
      ta.style.height = ta.scrollHeight + 'px';
    };
  
    const handle = (e) => {
      const ta = e.target;
      if (ta && ta.matches && ta.matches(selector)) autoGrow(ta);
    };
  
    // Eventos que atualizam a altura
    document.addEventListener('input', handle, true);
    document.addEventListener('change', handle, true);
  
    // Seta altura inicial para textareas já no DOM
    const init = () => {
      document.querySelectorAll(selector).forEach(autoGrow);
    };
  
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init, { once: true });
    } else {
      init();
    }
  
    // Observa textareas adicionadas dinamicamente
    const mo = new MutationObserver((mutations) => {
      for (const m of mutations) {
        for (const node of m.addedNodes) {
          if (node.nodeType !== 1) continue;
          if (node.matches && node.matches(selector)) autoGrow(node);
          if (node.querySelectorAll) node.querySelectorAll(selector).forEach(autoGrow);
        }
      }
    });
    mo.observe(document.documentElement, { childList: true, subtree: true });
  
    // Recalcula em mudanças de layout/fontes
    window.addEventListener('resize', init);
    if (document.fonts && document.fonts.ready) {
      document.fonts.ready.then(init).catch(() => {});
    }
  })();
  </script>
  
