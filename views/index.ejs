<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs' ) %>
<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Listagem de Denúncias</h2>
        </div>
        <div class="card-body">
            <% if (denuncias && denuncias.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Ano</th>
                                <th>Número</th>
                                <th>Tipo</th>
                                <th>Título</th>
                                <th>Endereço</th>
                                <th>Data</th>
                                <th>Status</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% denuncias.forEach(denuncia => { %>
                                <tr>
                                    <td><%= denuncia.year %></td>
                                    <td><%= denuncia.number %></td>
                                    <td><%= DENUNCIATION_SENDER.DENUNCIATION_SENDER[denuncia.registration_type] %></td>
                                    <td><%= denuncia.title %></td>
                                    <td>
                                        <%= denuncia.endereco %>, <%= denuncia.numero %><br>
                                        <%= denuncia.bairro %>
                                    </td>
                                    <td><%= new Date(denuncia.created_at).toLocaleDateString() %></td>
                                    <td>
                                        <span class="badge <%= denuncia.status === 'Pendente' ? 'bg-warning' : 'bg-success' %>">
                                            <%= denuncia.status %>
                                        </span>
                                    </td>
                                    <td>
                                        <a href="/denuncia/<%= denuncia.id %>" class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye"></i> Ver
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-info">
                    Nenhuma denúncia encontrada.
                </div>
            <% } %>
        </div>  
    </div>
</div>
<%- include ('partials/footer.ejs') %>